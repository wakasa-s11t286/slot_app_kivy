ImageWidget:

<ImageWidget>
    canvas.before:
        Color:
            rgba: 0.9, 0.9, 0.7, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Image:
            source: root.source
        
        BoxLayout:
            size_hint_y:0.3
            padding: 20, 30, 20,10
            Button:
                id: button1
                text: "First Image"
                font_size: 30
                on_press: root.btn_first()
            
            Button:
                id: button2
                text: "Random"
                font_size: 30
                on_press: root.btn_rand()